<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/dayTxt"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editDay"
        android:layout_toStartOf="@+id/editDay"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/editDay"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:contentDescription="MyHours edit"
        android:src="@drawable/ic_action_content_create"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/removeDay"
        android:layout_toStartOf="@+id/removeDay"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />

    <ImageButton
        android:id="@+id/removeDay"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:contentDescription="MyHours delete"
        android:src="@drawable/ic_action_action_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false" />
</RelativeLayout><!-- From: file:/C:/Users/StessyB/AndroidstudioProjects/MyHours/app/src/main/res/layout/item_list_layout.xml -->