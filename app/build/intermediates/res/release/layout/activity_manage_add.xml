<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.brubru.myhours.packView.ManageActivity"
    android:id="@+id/manage_add">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajout d&apos;un pointage"
        android:id="@+id/txtPointage"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textSize="25dp"
        android:id="@+id/DayAdd"
        android:layout_marginTop="54dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:text="dd/MM/yyyy"
        android:layout_below="@+id/txtPointage"
        android:layout_alignRight="@+id/txtPointage"
        android:layout_alignEnd="@+id/txtPointage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:id="@+id/H1Add"
        android:textSize="25dp"
        android:onClick="setTime"
        android:text="00:00"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/DayAdd"
        android:layout_alignStart="@+id/DayAdd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jour"
        android:id="@+id/txtDay"
        android:textSize="25dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:layout_alignBottom="@+id/DayAdd"
        android:layout_alignLeft="@+id/txtPointage"
        android:layout_alignStart="@+id/txtPointage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="H1"
        android:id="@+id/txtH1Add"
        android:textSize="25dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:layout_alignBottom="@+id/H1Add"
        android:layout_alignLeft="@+id/txtDay"
        android:layout_alignStart="@+id/txtDay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:textSize="25dp"
        android:id="@+id/H2Add"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:text="00:00"
        android:onClick="setTime"
        android:layout_below="@+id/H1Add"
        android:layout_alignLeft="@+id/H1Add"
        android:layout_alignStart="@+id/H1Add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="H2"
        android:id="@+id/txtH2Add"
        android:textSize="25dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:layout_alignBottom="@+id/H2Add"
        android:layout_alignLeft="@+id/txtH1Add"
        android:layout_alignStart="@+id/txtH1Add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:textSize="25dp"
        android:id="@+id/H3Add"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:text="00:00"
        android:onClick="setTime"
        android:layout_below="@+id/H2Add"
        android:layout_alignLeft="@+id/H2Add"
        android:layout_alignStart="@+id/H2Add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:textSize="25dp"
        android:id="@+id/H4Add"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:onClick="setTime"
        android:text="00:00"
        android:layout_below="@+id/H3Add"
        android:layout_alignLeft="@+id/H3Add"
        android:layout_alignStart="@+id/H3Add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="H3"
        android:id="@+id/txtH3Add"
        android:textSize="25dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:layout_above="@+id/H4Add"
        android:layout_alignLeft="@+id/txtH2Add"
        android:layout_alignStart="@+id/txtH2Add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="H4"
        android:id="@+id/txtH4Add"
        android:textSize="25dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:layout_alignBottom="@+id/H4Add"
        android:layout_alignLeft="@+id/txtH3Add"
        android:layout_alignStart="@+id/txtH3Add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:onClick="addDay"
        android:background="@drawable/ic_action_save"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:maxHeight="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CP"
        android:id="@+id/cbCP"
        android:layout_below="@+id/H4Add"
        android:layout_alignStart="@+id/txtH4Add"
        android:checked="false"
        android:onClick="typeDayClicked"
        android:layout_marginRight="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RTT"
        android:id="@+id/cbRTT"
        android:checked="false"
        android:onClick="typeDayClicked"
        android:layout_below="@+id/cbCP"
        android:layout_alignStart="@+id/cbCP" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congé Exeptionnel"
        android:id="@+id/cbCE"
        android:checked="false"
        android:onClick="typeDayClicked"
        android:layout_alignTop="@+id/cbCP"
        android:layout_alignStart="@+id/H4Add" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absence"
        android:id="@+id/cbAbsent"
        android:checked="false"
        android:onClick="typeDayClicked"
        android:layout_below="@+id/cbCE"
        android:layout_alignStart="@+id/cbCE" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Férié"
        android:id="@+id/cbFerie"
        android:checked="false"
        android:onClick="typeDayClicked"
        android:layout_below="@+id/cbRTT"
        android:layout_alignStart="@+id/cbRTT" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maladie"
        android:id="@+id/cbMaladie"
        android:checked="false"
        android:onClick="typeDayClicked"
        android:layout_below="@+id/cbAbsent"
        android:layout_alignStart="@+id/cbAbsent" />

</RelativeLayout>
